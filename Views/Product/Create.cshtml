@model _53_MVC_UrunYonetimSistemi.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Ürün Ekleme Sayfası</h1>

<h4>Product</h4>
@ViewBag.Status
<hr />
<div class="row">
    <div class="col-md-4">
        <p>
            <a asp-action="Index" asp-controller="Product">Ürün Listesi</a>
            <a asp-action="Index" asp-controller="Home">Anasayfa</a>
        </p>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="CategoryKey" asp-items="@(new SelectList(Model.Categorys,"Id","Name"))">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
